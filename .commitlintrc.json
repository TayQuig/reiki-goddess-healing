{
  "extends": ["@commitlint/config-conventional"],
  "rules": {
    "type-enum": [
      2,
      "always",
      [
        "feat",
        "fix",
        "docs",
        "style",
        "refactor",
        "test",
        "chore",
        "ci",
        "build",
        "revert"
      ]
    ],
    "scope-enum": [
      2,
      "always",
      [
        "about",
        "contact",
        "home",
        "blog",
        "shared",
        "config",
        "ci",
        "deps",
        "testing",
        "migration",
        "security",
        "components",
        "design-system"
      ]
    ],
    "subject-case": [
      2,
      "never",
      ["sentence-case", "start-case", "pascal-case", "upper-case"]
    ],
    "subject-empty": [2, "never"],
    "subject-full-stop": [2, "never", "."],
    "type-case": [2, "always", "lower-case"],
    "type-empty": [2, "never"]
  }
}
