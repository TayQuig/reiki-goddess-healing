{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",

    /* Linting */
    "strict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noFallthroughCasesInSwitch": true,

    /* Path mapping */
    "baseUrl": ".",
    "paths": {
      "@reiki-goddess/shared-components": [
        "../../packages/shared-components/src"
      ],
      "@reiki-goddess/shared-assets": ["../../packages/shared-assets/src"],
      "@reiki-goddess/design-system": ["../../packages/design-system/src"],
      "@reiki-goddess/shared-utils": ["../../packages/shared-utils/src"]
    }
  },
  "include": ["src"]
}
