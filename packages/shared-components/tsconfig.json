{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["DOM", "DOM.Iterable", "ES6"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "outDir": "./dist",
    "rootDir": "./src",
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "noEmit": false,
    "emitDeclarationOnly": false,
    "baseUrl": "../../",
    "paths": {
      "@reiki-goddess/shared-components": ["./packages/shared-components/src"],
      "@reiki-goddess/design-system": ["./packages/design-system/src"],
      "@reiki-goddess/shared-utils": ["./packages/shared-utils/src"],
      "@reiki-goddess/shared-assets": ["./packages/shared-assets"]
    }
  },
  "include": ["src/**/*", "vite-env.d.ts"],
  "exclude": ["dist", "node_modules", "**/*.test.*", "**/*.spec.*"],
  "references": [{ "path": "../shared-utils" }, { "path": "../design-system" }]
}
